<web-app id="WebApp_ID" version="2.4"
    xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>EcpCrm-Camel-Webapp</display-name>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:org/incode/eurocommercial/ecpcrm/camel/routing/propertyPlaceholderConfigurer-config.xml,
            classpath:org/incode/eurocommercial/ecpcrm/camel/routing/activemq-config.xml,
            classpath:org/incode/eurocommercial/ecpcrm/camel/routing/camel-config.xml
        </param-value>
    </context-param>


    <context-param>
        <param-name>spring.config.file</param-name>
        <param-value>classpath:org/incode/eurocommercial/ecpcrm/camel/routing/spring.properties</param-value>
    </context-param>

    <servlet>
        <servlet-name>jolokia-agent</servlet-name>
        <servlet-class>org.jolokia.http.AgentServlet</servlet-class>
        <init-param>
            <param-name>discoveryEnabled</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>agentDescription</param-name>
            <param-value>Apache ActiveMQ</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>jolokia-agent</servlet-name>
        <url-pattern>/api/jolokia/*</url-pattern>
    </servlet-mapping>

    <!-- Camel servlet -->
    <servlet>
        <servlet-name>CamelServlet</servlet-name>
        <servlet-class>org.apache.camel.component.servlet.CamelHttpTransportServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Camel servlet mapping -->
    <servlet-mapping>
        <servlet-name>CamelServlet</servlet-name>
        <url-pattern>/camel/*</url-pattern>
    </servlet-mapping>

</web-app>
